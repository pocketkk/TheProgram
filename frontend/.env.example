# ============================================================================
# The Program - Frontend Configuration
# ============================================================================
# Copy this file to .env and customize with your values
# IMPORTANT: Never commit .env files to version control
# ============================================================================

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
# Backend API URL
# Development: http://localhost:8000
# Production: https://your-domain.com/api
VITE_API_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
VITE_APP_NAME=The Program
VITE_APP_VERSION=2.0.0

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable AI-powered interpretations
VITE_ENABLE_AI_INTERPRETATIONS=true

# Enable debug mode (shows additional info in UI)
VITE_DEBUG_MODE=false

# ----------------------------------------------------------------------------
# Authentication
# ----------------------------------------------------------------------------
# Token storage key (localStorage key name)
VITE_TOKEN_STORAGE_KEY=theprogram_auth_token

# Auto-refresh token before expiry (minutes before expiry)
VITE_TOKEN_REFRESH_THRESHOLD=5

# ----------------------------------------------------------------------------
# Chart Display Defaults
# ----------------------------------------------------------------------------
# Default chart type on load
VITE_DEFAULT_CHART_TYPE=natal  # natal, transit, synastry

# Default chart style
VITE_DEFAULT_CHART_STYLE=modern  # modern, traditional

# Show aspect lines by default
VITE_SHOW_ASPECTS_DEFAULT=true

# Show house cusps by default
VITE_SHOW_HOUSES_DEFAULT=true

# ----------------------------------------------------------------------------
# UI/UX Settings
# ----------------------------------------------------------------------------
# Theme (will be user-configurable in future)
VITE_DEFAULT_THEME=light  # light, dark, auto

# Animation preferences
VITE_ENABLE_ANIMATIONS=true

# Date/time format
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIME_FORMAT=HH:mm:ss

# ----------------------------------------------------------------------------
# Performance
# ----------------------------------------------------------------------------
# Enable service worker for offline support (future feature)
VITE_ENABLE_SERVICE_WORKER=false

# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Max cache age for chart calculations (seconds)
VITE_CHART_CACHE_TTL=3600

# ----------------------------------------------------------------------------
# Development Tools
# ----------------------------------------------------------------------------
# Show Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=true

# Enable console logging
VITE_ENABLE_CONSOLE_LOGS=true

# Mock API responses (for offline development)
VITE_USE_MOCK_API=false

