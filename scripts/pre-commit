#!/bin/bash
# Pre-commit hook for The Program
# Install: ln -sf ../../scripts/pre-commit .git/hooks/pre-commit

set -e

echo "Running pre-commit checks..."

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Frontend checks
echo ""
echo "=== Frontend Checks ==="

cd frontend

# Type checking
echo -n "TypeScript... "
if npm run type-check --silent 2>/dev/null; then
    echo -e "${GREEN}OK${NC}"
else
    echo -e "${RED}FAILED${NC}"
    echo "Run 'cd frontend && npm run type-check' to see errors"
    exit 1
fi

# Linting (only staged files for speed)
echo -n "ESLint... "
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' | grep '^frontend/' | sed 's|^frontend/||' || true)
if [ -n "$STAGED_TS_FILES" ]; then
    if echo "$STAGED_TS_FILES" | xargs npx eslint --quiet 2>/dev/null; then
        echo -e "${GREEN}OK${NC}"
    else
        echo -e "${RED}FAILED${NC}"
        echo "Run 'cd frontend && npm run lint' to see errors"
        exit 1
    fi
else
    echo -e "${GREEN}OK${NC} (no staged files)"
fi

cd ..

# Backend checks
echo ""
echo "=== Backend Checks ==="

cd backend

# Quick pytest (only if test files changed)
echo -n "Python tests... "
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.py$' | grep '^backend/' || true)
if [ -n "$STAGED_PY_FILES" ]; then
    if source test_venv/bin/activate 2>/dev/null && pytest -x -q --tb=no 2>/dev/null; then
        echo -e "${GREEN}OK${NC}"
    else
        echo -e "${RED}FAILED${NC}"
        echo "Run 'cd backend && pytest -v' to see errors"
        exit 1
    fi
else
    echo -e "${GREEN}OK${NC} (no staged files)"
fi

cd ..

echo ""
echo -e "${GREEN}All pre-commit checks passed!${NC}"
