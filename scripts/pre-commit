#!/bin/bash
# Pre-commit hook for The Program
# Install: ln -sf ../../scripts/pre-commit .git/hooks/pre-commit

set -e

echo "Running pre-commit checks..."

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Frontend checks
echo ""
echo "=== Frontend Checks ==="

cd frontend

# Type checking
echo -n "TypeScript... "
if npm run type-check --silent 2>/dev/null; then
    echo -e "${GREEN}OK${NC}"
else
    echo -e "${RED}FAILED${NC}"
    echo "Run 'cd frontend && npm run type-check' to see errors"
    exit 1
fi

# Linting (only staged files for speed)
echo -n "ESLint... "
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' | grep '^frontend/' | sed 's|^frontend/||' || true)
if [ -n "$STAGED_TS_FILES" ]; then
    if echo "$STAGED_TS_FILES" | xargs npx eslint --quiet 2>/dev/null; then
        echo -e "${GREEN}OK${NC}"
    else
        echo -e "${RED}FAILED${NC}"
        echo "Run 'cd frontend && npm run lint' to see errors"
        exit 1
    fi
else
    echo -e "${GREEN}OK${NC} (no staged files)"
fi

cd ..

# Backend checks
echo ""
echo "=== Backend Checks ==="

cd backend

# Python syntax check (fast - no full test run)
echo -n "Python syntax... "
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.py$' | grep '^backend/' || true)
if [ -n "$STAGED_PY_FILES" ]; then
    # Just verify Python files are syntactically valid
    SYNTAX_OK=true
    for file in $STAGED_PY_FILES; do
        if ! python3 -m py_compile "../$file" 2>/dev/null; then
            SYNTAX_OK=false
            break
        fi
    done
    if $SYNTAX_OK; then
        echo -e "${GREEN}OK${NC}"
    else
        echo -e "${RED}FAILED${NC}"
        echo "Python syntax error in staged files"
        exit 1
    fi
else
    echo -e "${GREEN}OK${NC} (no staged files)"
fi

# Note: Full test suite should be run manually before merging
# Run: cd backend && pytest -v

cd ..

echo ""
echo -e "${GREEN}All pre-commit checks passed!${NC}"
