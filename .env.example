# ============================================================================
# The Program - Environment Configuration
# ============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit .env to version control!

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=The Program
APP_ENV=production  # development, staging, production
DEBUG=false

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
POSTGRES_DB=theprogram_db
POSTGRES_USER=theprogram
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_PORT=5432

# ============================================================================
# Redis Configuration (Optional)
# ============================================================================
REDIS_PASSWORD=changeme_in_production
REDIS_PORT=6379

# ============================================================================
# Backend Configuration
# ============================================================================
BACKEND_PORT=8000

# Security - IMPORTANT: Generate a secure random key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=generate_a_secure_random_key_here

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=info  # debug, info, warning, error, critical

# ============================================================================
# Frontend Configuration
# ============================================================================
FRONTEND_PORT=3000

# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost

# ============================================================================
# Nginx Reverse Proxy (Optional)
# ============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================================================
# Development Settings
# ============================================================================
# Uncomment these for development mode with live reload:
# - Mount source code volumes in docker-compose.yml
# - Set DEBUG=true
# - Set APP_ENV=development
