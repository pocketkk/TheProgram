# ============================================================================
# Docker Environment Configuration for The Program
# ============================================================================
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env files with real credentials to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_NAME=The Program
APP_ENV=production  # development, staging, production
DEBUG=false
LOG_LEVEL=info  # debug, info, warning, error, critical

# ----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------------------------------------
POSTGRES_DB=theprogram_db
POSTGRES_USER=theprogram
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_123!
POSTGRES_PORT=5432

# Full DATABASE_URL (auto-constructed in docker-compose, but can override)
# DATABASE_URL=postgresql://theprogram:password@postgres:5432/theprogram_db

# ----------------------------------------------------------------------------
# Redis Configuration (Optional - for caching)
# ----------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_456!
REDIS_PORT=6379
# REDIS_URL=redis://:password@redis:6379/0

# ----------------------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------------------
# CRITICAL: Generate a secure random key for production!
# Generate with: openssl rand -hex 32
SECRET_KEY=fd52661419e0d03e1caa736182cbb141176b022a03e9663efb27cd7d27839e12

JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30  # Token expiration in minutes

# ----------------------------------------------------------------------------
# API Configuration
# ----------------------------------------------------------------------------
API_V1_STR=/api
BACKEND_PORT=8000
HOST=0.0.0.0

# ----------------------------------------------------------------------------
# CORS Settings
# ----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ALLOW_CREDENTIALS=true

# ----------------------------------------------------------------------------
# Swiss Ephemeris
# ----------------------------------------------------------------------------
EPHEMERIS_PATH=/app/ephemeris

# ----------------------------------------------------------------------------
# Nginx (Optional - if using reverse proxy)
# ----------------------------------------------------------------------------
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ----------------------------------------------------------------------------
# PgAdmin (Development Only)
# ----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@theprogram.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ----------------------------------------------------------------------------
# Email Settings (Future Use)
# ----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@theprogram.com

# ----------------------------------------------------------------------------
# Monitoring & Logging (Future Use)
